<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="RadarScanView">
        <attr name="circleColor" format="color"/>
        <attr name="radarColor" format="color"/>
        <attr name="tailColor" format="color"/>
    </declare-styleable>

    <style name="rank_protect_card_layout_style">
        <item name="android:background">@drawable/cn_rank_protect_card_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="rank_protect_card_btn_normal">
        <item name="android:layout_width">57dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/cn_rank_protect_open_btn_bg</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">"开启"</item>
        <item name="android:textColor">#00af36</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="rank_protect_card_btn_ok">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/rank_protect_open_btn_ok</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">29dp</item>
    </style>
    <style name="rank_protect_card_btn_not_ok">
        <item name="android:text">"未开启"</item>
        <item name="android:textColor">#fe563c</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/rank_protect_open_btn_not_ok_icon</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="rank_protect_card_icon_style">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="rank_protect_card_text1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#373737</item>
    </style>
    <style name="rank_protect_card_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#878787</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
