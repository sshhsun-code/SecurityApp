<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#0e84ffff"
    android:id="@+id/total_layout"
    android:layout_height="match_parent">
    <include
        android:id="@+id/scan_title"
        layout="@layout/normal_title"/>
    <RelativeLayout
        android:id="@+id/scan_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_title">
        <com.example.sunqi.securityking.customview.RadarScanView
            android:id="@+id/racarscanview"
            android:background="@null"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/scan_layout"
            android:layout_below="@id/racarscanview"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/scan_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="@string/scaning"/>
            <TextView
                android:id="@+id/app_name"
                android:layout_toRightOf="@id/scan_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:text="@string/system_app"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        android:layout_below="@id/scan_title"
        android:layout_height="match_parent"
        android:visibility="visible">
        <TextView
            android:id="@+id/result_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:paddingBottom="70dp"
            android:gravity="center_horizontal"
            android:background="@color/cn_rank_protect_bg_red"
            android:text="发现高危应用,请及时处理"
            android:textSize="20sp"
            android:textColor="#fff"/>
        <View
            android:id="@+id/result_divider"
            android:layout_below="@id/result_notice"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#bfbfbf"/>
        <ListView
            android:id="@+id/result_listview"
            android:layout_marginTop="2px"
            android:layout_below="@id/result_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2px"
            android:divider="#bfbfbf"/>
    </RelativeLayout>
</RelativeLayout>