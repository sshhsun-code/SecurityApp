<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.MainActivity">
            <include android:id="@+id/main_top"
                layout="@layout/main_title"/>
            <RelativeLayout
                android:layout_below="@id/main_top"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#2c5aa9"
                android:text="Hello World!" >

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress"
                    android:background="#2c5aa9"
                    android:layout_marginLeft="27dp"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    custom:arc_text_color="#fff"
                    custom:arc_text_size="40sp"
                    custom:arc_progress="55"
                    android:layout_alignParentBottom="true"
                    custom:arc_bottom_text_size="20sp"
                    custom:arc_suffix_text_size="20sp"
                    android:layout_marginBottom="65dp"
                    custom:arc_suffix_text="%"
                    custom:arc_bottom_text="存储空间"/>

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress2"
                    android:background="#2c5aa9"
                    android:layout_width="120dp"
                    android:layout_centerVertical="true"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="65dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    custom:arc_progress="55"
                    custom:arc_text_color="#fff"
                    custom:arc_suffix_text="%"
                    custom:arc_text_size="30sp"
                    custom:arc_bottom_text_size="16sp"
                    custom:arc_bottom_text="内存"/>

            </RelativeLayout>
            <View
                android:id="@+id/view_divider"
                android:layout_below="@id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa"/>
            <GridView
                android:layout_below="@id/view_divider"
                android:layout_width="match_parent"
                android:background="#ddd"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:numColumns="2"
                android:horizontalSpacing="1sp"
                android:verticalSpacing="1sp"
                android:id="@+id/mian_gridView"
                android:layout_centerInParent="true">
            </GridView>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:focusable="true"
        android:clickable="true"
        android:background="#fff"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是右边栏"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
